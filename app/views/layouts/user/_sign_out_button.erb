<div class="dropdown dropdown-end">
    <label tabindex="0" class="btn btn-ghost btn-circle avatar">
        <div class="w-10 rounded-full">
            <%= image_tag "user_icon.svg", { alt:"user photo" } %>
        </div>
    </label>
    <ul tabindex="0" class="mt-3 z-[1] p-2 shadow menu menu-sm dropdown-content bg-base-100 rounded-box w-52">
        <li>
            <span class="text-sm text-neutral"><%= current_user.full_name %></span>
        </li>
        <li>
            <span class="text-sm  text-neutral"><%= current_user.email %></span>
        </li>
        <li>
            <a class="justify-between">
                Profile
                <span class="badge badge-primary">New</span>
            </a>
        </li>
        <li>
            <%= link_to "Settings", edit_user_registration_path, class:"link-neutral" %>
        </li>
        <li>
            <%= link_to "Log out", destroy_user_session_path, { data: { "turbo-method": :delete }, class: "link-neutral"}%>
        </li>
    </ul>
</div>

